<% doc_presenter = index_presenter(document) %>
<% sinai_index_collection = Ursus::SinaiIndexCollectionPresenter.new(document: doc_presenter).sinai_index_collection_terms %>

<% if sinai_index_collection.length > 0 %>
  <% sinai_index_collection.each do |field_name, field| -%>
    <!-- VALUE -->
    <div class='metadata-value-index--sinai'>
      <%= doc_presenter.field_value field %>
    </div>
  <% end %>
<% end %>
