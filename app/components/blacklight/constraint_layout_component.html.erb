<span class="filter filter-genre_sim">
  <% if @remove_path.present? %>
    <%
      accessible_remove_label = content_tag :span, class: 'sr-only' do
        if @label.blank?
          t('blacklight.search.filters.remove.value', value: @value)
        else
          t('blacklight.search.filters.remove.label_value', label: @label, value: @value)
        end
      end
    %>

    <%= link_to(
      content_tag(:span, 'âœ•', class: 'remove-icon') + accessible_remove_label,
      @remove_path,
      class: 'btn-base filter-label-remove filter-label-remove--sinai'
    ) %>
  <%- end -%>

  <span class="filter-group__label filter-group__label--sinai">
    <% unless @value.blank? %>
      <%= content_tag :span, @value, class: 'filter-label-value filter-label-value--sinai', title: strip_tags(@value) %>
    <% end %>
  </span>
</span>
